<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.body %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
<div class = "new-task" id="new-task-show">
  <p>♡modal♡</p>
</div>
<div class = "new-task-modal-wrapper" id="new-task-modal">
  <div class = "modal">
    <div class = "close-modal">
      <p class = "fa-times">x</p>
      <%= render 'form', task: @task %>
    </div>
  </div>
</div>